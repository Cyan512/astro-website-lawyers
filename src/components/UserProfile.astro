---
import SmartImage from './SmartImage.astro';

interface Props {
    name: string;
    role: string;
    image: string;
    bio: string;
}

const { name, role, image, bio } = Astro.props;
---

<div class="group relative">
    <div class="aspect-[3/4] w-full overflow-hidden bg-slate-200">
        <SmartImage
            src={image}
            alt={`Foto de ${name}`}
            class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
            fallbackSrc="/user-placeholder.svg"
        />
    </div>
    <div class="pt-6">
        <h3 class="font-title text-3xl font-bold text-slate-900">
            {name}
        </h3>
        <p class="mt-1 text-lg font-medium text-[var(--color-theme)]">
            {role}
        </p>
        <p class="mt-4 leading-relaxed text-slate-600">
            {bio}
        </p>
    </div>
</div>
