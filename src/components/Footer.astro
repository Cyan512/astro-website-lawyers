---
// Datos para los enlaces del footer
const aboutLinks = [
    { name: 'About Us', href: '#' },
    { name: 'Attorneys', href: '#' },
    { name: 'Know Your Rights', href: '#' },
    { name: 'Community', href: '#' },
    { name: 'Contact', href: '#' },
];

const practiceAreas = [
    { name: 'Car Accidents', href: '#' },
    { name: 'Truck Accidents', href: '#' },
    { name: 'Personal Injury', href: '#' },
    { name: 'Defective Product', href: '#' },
    { name: 'Workers Compensation', href: '#' },
];

const workingHours = [
    { day: 'Mon', time: '8.30 AM - 5.30 PM' },
    { day: 'Tue', time: '8.30 AM - 5.30 PM' },
    { day: 'Wed', time: '8.30 AM - 5.30 PM' },
    { day: 'Thu', time: '8.30 AM - 5.30 PM' },
    { day: 'Fri', time: '8.30 AM - 5.30 PM' },
];
---

<footer class="bg-[#0f0f0f] px-4 py-16 font-serif text-gray-400">
    <div
        class="mx-auto grid max-w-7xl grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-4"
    >
        <div class="space-y-6">
            <div class="flex items-center gap-3">
                <img
                    src="/logo-website.png"
                    alt="logo de Muña & Cardenas Abogados"
                    class="h-14 w-auto"
                />
            </div>
            <div class="space-y-2 text-sm not-italic">
                <p>123 S 4th St, Las Vegas, NV 12004.</p>
                <p>(01) 123 456 7890</p>
                <p>mail@example.com</p>
            </div>
            <div class="flex gap-4 text-white">
                <a href="#" class="transition-colors hover:text-gray-400">FB</a>
                <a href="#" class="transition-colors hover:text-gray-400">TW</a>
                <a href="#" class="transition-colors hover:text-gray-400">IG</a>
            </div>
        </div>

        <div>
            <h3 class="mb-6 text-xl font-semibold text-white">About</h3>
            <ul class="space-y-3 text-sm">
                {
                    aboutLinks.map((link) => (
                        <li>
                            <a
                                href={link.href}
                                class="transition-colors hover:text-white"
                            >
                                {link.name}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>

        <div>
            <h3 class="mb-6 text-xl font-semibold text-white">
                Practice Areas
            </h3>
            <ul class="space-y-3 text-sm">
                {
                    practiceAreas.map((area) => (
                        <li>
                            <a
                                href={area.href}
                                class="transition-colors hover:text-white"
                            >
                                {area.name}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>

        <div>
            <h3 class="mb-6 text-xl font-semibold text-white">Working Hours</h3>
            <ul class="space-y-3 text-sm">
                {
                    workingHours.map((item) => (
                        <li class="flex justify-between md:justify-start md:gap-4">
                            <span class="text-white">{item.day}:</span>
                            <span>{item.time}</span>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>

    <div
        class="mx-auto mt-16 max-w-7xl border-t border-gray-800 pt-8 text-center text-xs tracking-widest text-gray-600 uppercase"
    >
        Copyright © 2025 Mike & John
    </div>
</footer>
