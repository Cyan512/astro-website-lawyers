---
import '../styles/global.css';
import Header from '../components/navbar/Header.astro';
import Footer from '../components/Footer.astro';
const { title } = Astro.props;

const whatsappNumber = '51912345678';
const whatsappMessage = 'Hola, quiero más información';
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/logo-website.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <Header />
        <slot />
        <Footer />
        <a
            href={whatsappLink}
            target="_blank"
            class="fixed right-4 bottom-4 z-50 flex items-center justify-center rounded-full bg-green-500 p-4 text-white shadow-lg hover:bg-green-600"
            aria-label="Chatear por WhatsApp"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    d="M20.52 3.48A11.91 11.91 0 0012 0C5.372 0 0 5.372 0 12c0 2.11.55 4.08 1.52 5.82L0 24l6.36-1.6A11.93 11.93 0 0012 24c6.628 0 12-5.372 12-12 0-3.2-1.25-6.19-3.48-8.52zm-8.52 18c-1.99 0-3.91-.55-5.58-1.58l-.4-.25-3.78.95.95-3.68-.26-.41A9.95 9.95 0 012 12c0-5.52 4.48-10 10-10s10 4.48 10 10-4.48 10-10 10zm5.24-7.06c-.28-.14-1.66-.82-1.92-.91-.26-.09-.45-.14-.64.14s-.73.91-.9 1.1c-.16.19-.32.21-.6.07s-1.2-.44-2.28-1.4c-.84-.75-1.4-1.67-1.56-1.86s-.14-.28 0-.42c.14-.14.32-.36.48-.54.16-.18.21-.32.32-.53.11-.21.05-.39-.03-.54-.08-.14-.64-1.54-.88-2.12-.23-.56-.46-.49-.64-.5-.16-.01-.35-.01-.54-.01s-.53.08-.81.39c-.28.31-1.08 1.05-1.08 2.56s1.1 2.97 1.25 3.18c.14.21 2.16 3.29 5.22 4.62.73.32 1.3.51 1.74.65.73.23 1.4.2 1.93.12.59-.09 1.66-.68 1.89-1.34.23-.66.23-1.23.16-1.35-.08-.12-.28-.19-.56-.33z"
                ></path>
            </svg>
        </a>
    </body>
</html>
